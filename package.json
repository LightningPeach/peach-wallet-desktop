{
  "name": "lightning-peach-wallet",
  "version": "0.5.1-mainnet-beta",
  "main": "main.js",
  "license": "MIT",
  "description": "Peach Wallet",
  "homepage": "lightningpeach.com",
  "author": {
    "name": "LightningPeach",
    "email": "contact@lightningpeach.com",
    "url": "lightningpeach.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightningpeach/lightning-peach-wallet.git"
  },
  "private": true,
  "scripts": {
    "start": "webpack && npm run scss && electron .",
    "build": "webpack && npm run scss && build",
    "build:jenkins": "webpack && npm run scss && build --publish never",
    "build:release": "webpack && npm run scss && build --publish onTagOrDraft",
    "postinstall": "electron-builder install-app-deps",
    "lint": "cross-env NODE_ENV=development eslint main.js test frontend server",
    "lint:report": "npm run lint -- --format junit --output-file ./coverage/reports/eslint/eslint.xml",
    "scss": "npm run scss:compile -- ",
    "scss:compile": "node-sass ./public/assets/_builds --output ./public/assets/dist/ --source-map-embed --output-style compressed ",
    "scss:watch": "npm run scss -- --watch",
    "test": "npm run lint && npm run test:coverage -- ",
    "test:e2e": "cross-env NODE_ENV=spectron mocha --opts ./test/mocha.opts ./test/e2e",
    "test:unit": "cross-env NODE_ENV=test mocha --opts ./test/mocha.opts ./test/unit",
    "test:coverage": "cross-env NODE_ENV=test nyc npm run test:unit",
    "test:watch": "npm test -- --watch"
  },
  "build": {
    "appId": "com.bitfury.lightning-peach.wallet.desktop",
    "productName": "Peach Wallet",
    "files": [
      "**/*",
      "!settings.local.ini",
      "!settings.peach.local.json"
    ],
    "extraFiles": [
      {
        "from": "node_modules/executable",
        "to": "resources/app.asar.unpacked/node_modules/executable"
      },
      {
        "from": "node_modules/preload",
        "to": "resources/app.asar.unpacked/node_modules/preload"
      }
    ],
    "extraResources": [
      "settings.ini"
    ],
    "linux": {
      "icon": "./public/app_icons/png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "icon": "./public/app_icons/mac/app-icon.icns",
      "category": "Utility",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "./public/app_icons/win/app-icon.ico",
      "target": [
        "portable",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "installerIcon": "./public/app_icons/win/app-icon.ico",
      "uninstallerIcon": "./public/app_icons/win/app-icon.ico",
      "license": "terms_and_conditions.html"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-do-expressions": "^7.6.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-function-sent": "^7.5.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.2.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.5.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "chai": "^4.2.0",
    "cross-env": "^3.2.4",
    "electron": "^3.1.13",
    "electron-builder": "^20.44.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "jsdom": "^11.12.0",
    "mocha": "^4.1.0",
    "nock": "^9.6.1",
    "node-sass": "^4.10.0",
    "path": "^0.12.7",
    "react-hot-loader": "^1.3.1",
    "redux-logger": "^2.10.2",
    "redux-mock-store": "^1.5.3",
    "sinon": "^7.4.2",
    "sinon-chai": "^3.3.0",
    "spectron": "^3.8.0",
    "webpack": "4.12.1",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@exponent/electron-cookies": "^2.0.0",
    "@fidm/x509": "^1.2.1",
    "@grpc/proto-loader": "^0.3.0",
    "@journeyapps/sqlcipher": "^3.2.1",
    "aes-js": "^3.1.2",
    "bitcoinjs-lib": "^3.3.2",
    "convict": "^4.4.1",
    "electron-ipc-tunnel": "^3.1.0",
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^4.1.2",
    "elliptic": "^6.5.1",
    "grpc": "^1.23.3",
    "ini": "^1.3.5",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.15",
    "log4js": "^3.0.6",
    "moment": "^2.24.0",
    "moment-duration-format": "^2.3.2",
    "nyc": "^14.1.1",
    "prop-types": "^15.7.2",
    "public-ip": "^3.2.0",
    "qrcode": "^1.4.1",
    "raf": "^3.4.1",
    "rc-tooltip": "^3.7.3",
    "react": "^16.9.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-datepicker": "^1.8.0",
    "react-dom": "^16.9.0",
    "react-ga": "^2.6.0",
    "react-notification-system": "^0.2.16",
    "react-redux": "^4.4.10",
    "react-router": "^3.2.4",
    "react-router-redux": "^4.0.5",
    "react-select": "^1.3.0",
    "react-slick": "^0.23.2",
    "react-table": "^6.10.3",
    "react-tabs-redux": "^2.0.1",
    "reconnecting-websocket": "^4.2.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.0",
    "rimraf": "^2.7.1",
    "typeorm": "^0.2.19",
    "url-parse": "^1.4.7",
    "ws": "^5.2.2",
    "xregexp": "^4.2.4"
  }
}
